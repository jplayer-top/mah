<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_110dp"
    android:layout_height="@dimen/dimen_100dp"
    android:gravity="center_vertical">

    <View
        android:layout_width="@dimen/dimen_15dp"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color999"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clBgSel"
        android:layout_width="@dimen/dimen_90dp"
        android:layout_height="@dimen/dimen_100dp"
        android:background="@drawable/decorate_select_progress">

        <com.kingja.magicmirror.MagicMirrorView
            android:id="@+id/ivItemSrc"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:src="@drawable/decorate_diannuan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:mirrorBorderColor="@color/color323232"
            app:mirrorBorderWidth="1px"
            app:mirrorShape="circle"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_35dp"
            android:background="@drawable/select_status_progress"
            android:paddingBottom="@dimen/dimen_2dp"
            android:paddingEnd="@dimen/dimen_5dp"
            android:paddingStart="@dimen/dimen_5dp"
            android:paddingTop="2dp"
            android:text="已完成"
            android:textColor="@drawable/selector_text_progress"
            android:textSize="@dimen/dimen_10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivItemSrc"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="5水电暖施工"
            android:textColor="@color/color323232"
            android:textSize="@dimen/dimen_10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStatus"/>

        <ImageView
            android:id="@+id/ivChangeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_14dp"
            android:layout_marginTop="@dimen/dimen_9dp"
            android:padding="@dimen/dimen_7dp"
            android:src="@drawable/decorate_change_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="@dimen/dimen_10dp"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/color999"/>
</LinearLayout>

