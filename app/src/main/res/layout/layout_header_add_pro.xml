<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvProNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15dp"
        android:text="项目编号"
        android:textSize="@dimen/dimen_16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:background="@color/white"
        android:hint="请输入项目编号"
        android:textColor="@color/chocolate"
        android:textColorHint="@color/color999"
        app:layout_constraintEnd_toStartOf="@+id/btnSure"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProNum"/>

    <Button
        android:id="@+id/btnSure"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:background="@drawable/shape_border_grey"
        android:text="确认"
        app:layout_constraintBottom_toBottomOf="@+id/editNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editNumber"
        app:layout_constraintTop_toTopOf="@+id/editNumber"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@drawable/shape_divider"
        app:layout_constraintEnd_toEndOf="@+id/editNumber"
        app:layout_constraintStart_toStartOf="@+id/editNumber"
        app:layout_constraintTop_toBottomOf="@+id/editNumber"/>
</android.support.constraint.ConstraintLayout>