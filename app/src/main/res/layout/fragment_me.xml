<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/layout_title_toolbar"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/smartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        app:srlAccentColor="@android:color/white"
        app:srlEnablePreviewInEditMode="true"
        app:srlPrimaryColor="#444444"
        tools:showIn="@layout/fragment_home">

        <com.scwang.smartrefresh.header.BezierCircleHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whitesmoke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llToLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/selector_white_muti_press"
                    android:gravity="center_vertical"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/ivMeAvatar"
                        android:layout_width="@dimen/me_pic_avator"
                        android:layout_height="@dimen/me_pic_avator"
                        android:src="@mipmap/ic_launcher_round"/>

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingStart="@dimen/dp_10"
                        android:text="@string/me_click_login"
                        android:textSize="@dimen/sp_18"
                        tools:ignore="RtlHardcoded,RtlSymmetry"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/me_linearlayout_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvMe"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@drawable/selector_white_muti_press"
                        android:drawableLeft="@drawable/me_me"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/me"
                        tools:ignore="RtlHardcoded"/>

                    <TextView
                        android:id="@+id/tvOrder"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:drawableLeft="@drawable/me_order"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/me_order"
                        tools:ignore="RtlHardcoded"/>

                    <TextView
                        android:id="@+id/tvFangAn"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:drawableLeft="@drawable/me_scheme"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/me_scheme"
                        tools:ignore="RtlHardcoded"/>

                    <TextView
                        android:id="@+id/tvShouCang"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:drawableLeft="@drawable/me_collection"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/me_cart"
                        tools:ignore="RtlHardcoded"/>

                    <TextView
                        android:id="@+id/tvShopCart"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:drawableLeft="@drawable/me_shopcart"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/me_card_shop"
                        tools:ignore="RtlHardcoded"/>

                    <TextView
                        android:id="@+id/tvLocal"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:drawableLeft="@drawable/me_local"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/me_local"
                        tools:ignore="RtlHardcoded"/>

                    <TextView
                        android:id="@+id/tvManager"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:drawableLeft="@drawable/me_manager"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/me_manager"
                        tools:ignore="RtlHardcoded"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/me_linearlayout_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:animateLayoutChanges="true">

                    <TextView
                        android:id="@+id/tvShare"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@drawable/selector_white_muti_press"
                        android:drawableLeft="@drawable/me_share"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/share_mah"
                        tools:ignore="RtlHardcoded"/>

                    <TextView
                        android:id="@+id/tvUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:drawableLeft="@drawable/me_updata"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/mah_updata"
                        tools:ignore="RtlHardcoded"/>

                    <TextView
                        android:id="@+id/tvAbout"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?selectableItemBackground"
                        android:drawableLeft="@drawable/me_about"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/about_mah"
                        tools:ignore="RtlHardcoded"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tvServer"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?selectableItemBackground"
                        android:drawableLeft="@drawable/me_me"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="我的专属客服"
                        tools:ignore="RtlHardcoded"/>

                    <TextView
                        android:id="@+id/tvSet"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="?selectableItemBackground"
                        android:drawableLeft="@drawable/icon_set"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/me_set"
                        android:visibility="gone"
                        tools:ignore="RtlHardcoded"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <com.scwang.smartrefresh.layout.footer.FalsifyFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>