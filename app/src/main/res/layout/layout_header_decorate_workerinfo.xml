<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvFirstName"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/shape_cir_theme"
        android:gravity="center"
        android:text="施"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_25sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:src="@drawable/placeholder"
        android:id="@+id/cirAvatar"
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="施工"
        android:textSize="@dimen/dimen_15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvFirstName"
        app:layout_constraintStart_toStartOf="@+id/tvFirstName"
        app:layout_constraintTop_toBottomOf="@+id/tvFirstName"/>

    <TextView
        android:id="@+id/tvIsID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/shape_cir_theme"
        android:paddingBottom="@dimen/dimen_5dp"
        android:paddingEnd="@dimen/dimen_10dp"
        android:paddingStart="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:text="实名认证"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_10sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/viewNo"
        app:layout_constraintTop_toBottomOf="@+id/tvName"/>

    <View
        android:id="@+id/viewNo"
        android:layout_width="1dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvIsApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/shape_cir_gray"
        android:paddingBottom="@dimen/dimen_5dp"
        android:paddingEnd="@dimen/dimen_10dp"
        android:paddingStart="@dimen/dimen_10dp"
        android:paddingTop="@dimen/dimen_5dp"
        android:text="整个家认证"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_10sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/viewNo"
        app:layout_constraintTop_toBottomOf="@+id/tvName"/>

    <TextView
        android:id="@+id/tvTipWorkerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="基本信息"
        app:layout_constraintEnd_toEndOf="@+id/tvFirstName"
        app:layout_constraintStart_toStartOf="@+id/tvFirstName"
        app:layout_constraintTop_toBottomOf="@+id/tvIsApp"/>

    <View
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:background="@color/colorBlackGold"
        app:layout_constraintBottom_toBottomOf="@+id/tvTipWorkerInfo"
        app:layout_constraintStart_toEndOf="@+id/tvTipWorkerInfo"
        app:layout_constraintTop_toTopOf="@+id/tvTipWorkerInfo"/>

    <View
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:background="@color/colorBlackGold"
        app:layout_constraintBottom_toBottomOf="@+id/tvTipWorkerInfo"
        app:layout_constraintEnd_toStartOf="@+id/tvTipWorkerInfo"
        app:layout_constraintTop_toTopOf="@+id/tvTipWorkerInfo"/>

    <LinearLayout
        android:id="@+id/llWorkerInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTipWorkerInfo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_9dp"
            android:text="性别:"
            android:textColor="@color/color666"
            android:textSize="@dimen/dimen_10sp"/>

        <TextView
            android:id="@+id/tvWorkerSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textColor="@color/chocolate"
            android:textSize="@dimen/dimen_15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_9dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:text="年龄:"
            android:textColor="@color/color666"
            android:textSize="@dimen/dimen_10sp"/>

        <TextView
            android:id="@+id/tvWorkerAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30岁"
            android:textColor="@color/chocolate"
            android:textSize="@dimen/dimen_15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_9dp"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:text="工龄:"
            android:textColor="@color/color666"
            android:textSize="@dimen/dimen_10sp"/>

        <TextView
            android:id="@+id/tvWorkerYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5年"
            android:textColor="@color/chocolate"
            android:textSize="@dimen/dimen_15sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTipWorkerWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="施工信息"
        app:layout_constraintEnd_toEndOf="@+id/tvFirstName"
        app:layout_constraintStart_toStartOf="@+id/tvFirstName"
        app:layout_constraintTop_toBottomOf="@+id/llWorkerInfo"/>

    <View
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:background="@color/colorBlackGold"
        app:layout_constraintBottom_toBottomOf="@+id/tvTipWorkerWork"
        app:layout_constraintStart_toEndOf="@+id/tvTipWorkerWork"
        app:layout_constraintTop_toTopOf="@+id/tvTipWorkerWork"/>

    <View
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:background="@color/colorBlackGold"
        app:layout_constraintBottom_toBottomOf="@+id/tvTipWorkerWork"
        app:layout_constraintEnd_toStartOf="@+id/tvTipWorkerWork"
        app:layout_constraintTop_toTopOf="@+id/tvTipWorkerWork"/>

    <LinearLayout
        android:id="@+id/llWorkerWork"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTipWorkerWork">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_9dp"
                android:text="工种:"
                android:textColor="@color/color666"
                android:textSize="@dimen/dimen_10sp"/>

            <TextView
                android:id="@+id/tvWorkerType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="木工"
                android:textColor="@color/chocolate"
                android:textSize="@dimen/dimen_15sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_9dp"
                android:text="进行中/所有项目:"
                android:textColor="@color/color666"
                android:textSize="@dimen/dimen_10sp"/>

            <TextView
                android:id="@+id/tvWorkerIngEd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0户"
                android:textColor="@color/chocolate"
                android:textSize="@dimen/dimen_15sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvTipWorkerServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="服务星级"
        app:layout_constraintEnd_toEndOf="@+id/tvFirstName"
        app:layout_constraintStart_toStartOf="@+id/tvFirstName"
        app:layout_constraintTop_toBottomOf="@+id/llWorkerWork"/>

    <View
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:background="@color/colorBlackGold"
        app:layout_constraintBottom_toBottomOf="@+id/tvTipWorkerServer"
        app:layout_constraintStart_toEndOf="@+id/tvTipWorkerServer"
        app:layout_constraintTop_toTopOf="@+id/tvTipWorkerServer"/>

    <View
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:background="@color/colorBlackGold"
        app:layout_constraintBottom_toBottomOf="@+id/tvTipWorkerServer"
        app:layout_constraintEnd_toStartOf="@+id/tvTipWorkerServer"
        app:layout_constraintTop_toTopOf="@+id/tvTipWorkerServer"/>

    <LinearLayout
        android:id="@+id/llWorkerRating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTipWorkerServer">

        <android.support.v7.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="5"
            android:theme="@style/RatingBar"/>

        <TextView
            android:id="@+id/tvWorkerRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:text="5.0"
            android:textColor="@color/chocolate"
            android:textSize="@dimen/dimen_18sp"
            android:textStyle="italic|bold"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>