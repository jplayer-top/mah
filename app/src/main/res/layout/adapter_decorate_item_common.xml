<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_100dp"
    android:layout_height="@dimen/dimen_100dp">

    <LinearLayout
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_100dp"
        android:background="@color/colorCCC"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.kingja.magicmirror.MagicMirrorView
            android:id="@+id/ivItemSrc"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:src="@drawable/decorate_diannuan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintVertical_bias="0.3"
            app:mirrorBorderColor="@color/color323232"
            app:mirrorBorderWidth="1px"
            app:mirrorShape="circle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_3dp"
            android:text="姓名"
            android:textSize="@dimen/dimen_12sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_3dp"
            android:text="业主"
            android:textColor="@color/color666"
            android:textSize="@dimen/dimen_12sp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>