<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WXThem" parent="OblAppTheme">
    </style>

    <style name="textview_body_magin_10">
        <item name="android:lineSpacingExtra">@dimen/lineSpacingExtra_3</item>
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:textColor">@color/colorBlackGold</item>
    </style>

    <style name="me_linearlayout_style">
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:background">@color/white</item>
        <item name="android:divider">@drawable/shape_divider</item>
        <item name="android:dividerPadding">@dimen/divider_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:showDividers">middle</item>
    </style>

    <style name="img_adjust_bounds">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="margin_30dp_1px_h_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#cecece</item>
    </style>


    <style name="AnimBottom">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowEnterAnimation">@anim/bottem_enter</item>
        <item name="android:windowExitAnimation">@anim/bottem_exit</item>
    </style>

    <style name="dialog_custom" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">false</item>       <!--是否有标题-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:background">#00000000</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">false</item> <!--背景是否模糊显示-->
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/color999</item>
        <item name="colorControlActivated">@color/chocolate</item>
    </style>

    <style name="RatingBar.White" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/color999</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
</resources>
